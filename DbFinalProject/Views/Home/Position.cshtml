@model List<Position>

@{
    ViewData["Title"] = "Positions";
}

<h2>Positions</h2>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Name</th>
            
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("EditPosition", "Home", new { id = item.Id })">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("DeletePosition", "Home", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("EditPosition", "Home")" class="btn btn-primary">Add Position</a>
