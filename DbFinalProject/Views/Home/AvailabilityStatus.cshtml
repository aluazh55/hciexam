@model List<AvailabilityStatus>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Status</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.StatusName</td>
				<td><a href="@Url.Action("EditStatus", "Home", new { id = item.Id })">Edit</a></td>
				<td><a href="@Url.Action("DeleteStatus", "Home", new { id = item.Id })">Delete</a></td>
			</tr>
		}
	</tbody>
</table>

<a href="@Url.Action("EditAvailabilityStatus", "Home")" class="btn btn-primary">Add Status</a>
