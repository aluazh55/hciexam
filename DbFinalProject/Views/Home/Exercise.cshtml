@model List<Exercise>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Project</th>
			<th>Deadline</th>
			<th>Priority</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Project?.Name</td>
				<td>@item.Deadline?.ToShortDateString()</td>
				<td>@item.Priority</td>
				<td><a href="@Url.Action("EditExercise", "Home", new { id = item.Id })">Edit</a></td>
				<td><a href="@Url.Action("DeleteExercise", "Home", new { id = item.Id })">Delete</a></td>
			</tr>
		}
	</tbody>
</table>

<a href="@Url.Action("EditExercise", "Home")" class="btn btn-primary">Add Task</a>
