@model List<Team>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Description</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td><a href="@Url.Action("EditTeam", "Home", new { id = item.Id })">Edit</a></td>
				<td><a href="@Url.Action("DeleteTeam", "Home", new { id = item.Id })">Delete</a></td>
			</tr>
		}
	</tbody>
</table>

<a href="@Url.Action("EditTeam", "Home")" class="btn btn-primary">Add Team</a>
