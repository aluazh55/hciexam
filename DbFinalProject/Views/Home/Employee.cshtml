@model List<Employee>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Email</th>
			<th>Position</th>
			<th>Status</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Email</td>
				<td>@item.Position?.Name</td>
				<td>@item.Status?.StatusName</td>
				<td><a href="@Url.Action("EditEmployee", "Home", new { id = item.Id })">Edit</a></td>
				<td><a href="@Url.Action("DeleteEmployee", "Home", new { id = item.Id })">Delete</a></td>
			</tr>
		}
	</tbody>
</table>

<a href="@Url.Action("EditEmployee", "Home")" class="btn btn-primary">Add Employee</a>
