@model List<Responsibility>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td><a href="@Url.Action("EditResponsibility", "Home", new { id = item.Id })">Edit</a></td>
				<td><a href="@Url.Action("DeleteResponsibility", "Home", new { id = item.Id })">Delete</a></td>
			</tr>
		}
	</tbody>
</table>

<a href="@Url.Action("EditResponsibility", "Home")" class="btn btn-primary">Add Responsibility</a>
